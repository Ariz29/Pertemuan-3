# In[10]:


angka = int(input("berapa angka yang mau dimasukkan = "))
total = 0

for angka_baru in range(angka):
    nilai = int(input("masukkan angkanya = "))
    total = total + nilai
rata_rata = (total/angka)
print("rata-rata = ",rata_rata)


# ## Soal No 7

# In[ ]:


umur = int(input("Masukkan umur anda = "))
umuran = 0

for umur_baru in range(umur):
    nilai = int(input("masukkan angkanya = "))
    if nilai >= 2:
        print("Gratis")
    elif  nilai >= 3 and nilai <= 12:
        print("Anak-anak harus membayar $14.00")
    elif nilai >=65:
        print("Lansia umur {} bayar $18.00")

total = nilai+umur
print("total = ",total)


# In[9]:


jumlah = total
while True:
    nilai = int(input("Masukkan angka = "))
    if nilai >= 2:
        print("Gratis")
    elif  nilai >= 3 and nilai <= 12:
        print("Anak-anak harus membayar $14.00")
    elif nilai >=65:
        print("Lansia umur {} bayar $18.00")
        jumlah +=nilai
    else:
        print("salah goblok")
print(jumlah)


