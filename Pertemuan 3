tahun = int(input("Input tahun: "))

if (tahun % 4) == 0:
    print ("Tahun Kabisat")
elif (tahun % 100) == 0:
    print("Bukan tahun kabisat")
elif (tahun % 400) == 0:
    print ("Tahun Kabisat")
else:
    print("Bukan tahun kabisat")


